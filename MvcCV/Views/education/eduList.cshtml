@model List<MvcCV.Models.Entity.education>
@{
    ViewBag.Title = "eduList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<h2 class="card-header" style="color: white; background-color:gray; text-align: center">Eğitim Listesi</h2>
<br />
<table class="table table-bordered" style="background-color: gray; text-align: center; color: white ">
    <tr>
        <th>ID</th>
        <th>Okul</th>
        <th>Fakülte</th>
        <th>Bölüm</th>
        <th>Bitirme Notu</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>

    @foreach (var e in Model)
    {
<tr>
    <td>@e.educationID</td>
    <td>@e.tittle</td>
    <td>@e.subtittle</td>
    <td>@e.subtittle2</td>
    <td>@e.gradeavarage</td>
    <td>@e.date</td>
    <td><a href="/education/eduDelete/@e.educationID" class="btn btn-danger">Sil</a></td>
    <td><a href="/education/eduUpdate/@e.educationID" class="btn btn-warning">Düzenle</a></td>

</tr>
    }
</table>
<a href="/education/eduAdd/" class="btn btn-dark" style="color:white;">Yeni Eğitim Ekle</a>


