@model MvcCV.Models.Entity.education
@{
    ViewBag.Title = "eduUpdate";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<h2 class="card-header" style="color: white; background-color: gray; text-align: center ">Eğitim Güncelleme Sayfası</h2>
<br />

<div style="background-color:darkgray; border:outset; color:white ">
    <form method="post">
        <br />
       @Html.HiddenFor(x=>x.educationID)
        @Html.TextBoxFor(x => x.tittle, new { @class = "form-control" })
        <br />
        @Html.TextBoxFor(x => x.subtittle, new { @class = "form-control" })
        <br />
        @Html.TextBoxFor(x => x.subtittle2, new { @class = "form-control" })
        <br />
        @Html.TextBoxFor(x => x.gradeavarage, new { @class = "form-control" })
        <br />
        @Html.TextBoxFor(x => x.date, new { @class = "form-control" })
        <br />
        <button style="border-radius:12px;" class="btn-outline-dark"> Kaydet </button>
        <br /> <br />
    </form>
</div>


