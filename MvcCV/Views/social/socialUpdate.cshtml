@model MvcCV.Models.Entity.social
@{
    ViewBag.Title = "socialUpdate";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<h2 class="card-header" style="color: white; background-color: gray; text-align: center ">Sosya Medya Güncelleme Sayfası</h2>
<br />

<div style="background-color:darkgray; border:outset; color:white ">
    <form method="post">
        <br />
        @Html.HiddenFor(x => x.meidaID)
        @Html.TextBoxFor(x => x.mediaName, new { @class = "form-control" })
        <br />
        @Html.TextBoxFor(x => x.mediaLink, new { @class = "form-control" })
        <br />
        @Html.TextBoxFor(x => x.mediaIcon, new { @class = "form-control" })
        <br />     
        <button style="border-radius:12px;" class="btn-outline-dark"> Kaydet </button>
        <br /> <br />
    </form>
</div>


