@model List<MvcCV.Models.Entity.about>
@{
    ViewBag.Title = "aboutList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<h2 class="card-header" style="color: white; background-color:gray; text-align: center">Hakkımda Listesi</h2>
<br />

<table class="table table-bordered" style="background-color: gray; text-align: center; color: white ">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Adres</th>
        <th>Mail</th>
        <th>Açıklama</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>

    @foreach (var a in Model)
    {
        <tr>
            <td>@a.aboutID</td>
            <td>@a.name</td>
            <td>@a.surname</td>
            <td>@a.adres</td>
            <td>@a.mail</td>
            <td>@a.descreption.Substring(0,10)</td>
            <td>@a.imageUrl</td>
            
            <td><a href="/about/abDelete/@a.aboutID" class="btn btn-danger">Sil</a></td>
            <td><a href="/about/abUpdate/@a.aboutID" class="btn btn-warning">Düzenle</a></td>

        </tr>
    }
</table>
<a href="/about/aboutAdd/" class="btn btn-dark" style="color:white;">Yeni Hakkımda Ekle</a>

