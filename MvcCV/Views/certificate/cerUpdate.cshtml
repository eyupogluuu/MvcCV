@model MvcCV.Models.Entity.certificate
@{
    ViewBag.Title = "cerUpdate";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<br />
<h2 class="card-header" style="color: white; background-color: gray; text-align: center ">Sertifika Güncelleme Sayfası</h2>
<br />

<div style="background-color:darkgray; border:outset; color:white ">
    <form method="post">
        <br />
        @Html.HiddenFor(x => x.certificateID)
        @Html.TextBoxFor(x => x.date, new { @class = "form-control" })
        <br />
        @Html.TextBoxFor(x => x.descreption, new { @class = "form-control" })
        <br />
        
        <button style="border-radius:12px;" class="btn-outline-dark"> Güncelle </button>
        <a href="/certificate/cerDelete/@Model.certificateID" class="btn btn-danger">Sil</a>
        <br /> <br />
    </form>
</div>

