@model List<MvcCV.Models.Entity.certificate>
@{
    ViewBag.Title = "certifacateList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@{ 
    string renk = "";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            
                        </div><!-- /.card-header -->
                        <div class="card-body">



                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                @foreach (var c in Model)
                                {
                                    if (c.certificateID % 2 == 0)
                                    {
                                        renk = "btn btn-success";
                                    }
                                    else
                                    {
                                        renk = "btn btn-primary";
                                    }
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <a href="/certificate/cerUpdate/@c.certificateID" class="@renk">
                                                <span class="@renk">
                                                    @c.date
                                                </span>
                                            </a>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>

                                            <div class="timeline-item">


                                                <div class="timeline-body">
                                                    @c.descreption
                                                </div>

                                            </div>
                                        </div>

                                    </div>
                                }
                            </div>
                            <a href="/certificate/certificateAdd/" class="btn btn-dark" style="color:white;">Yeni Sertifika Ekle</a>
                        </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
       
    </section>
</body>
</html>
