@model List<MvcCV.Models.Entity.contact>
@{
    ViewBag.Title = "messageList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        @foreach (var c in Model)
                                        {


                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="bg-info">
                                                @(((DateTime)c.date).ToString("dd-MM-yyyy"))
                                            </span>
                                        </div>

                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i>@c.mail</span>
                                                <h3 class="timeline-header"><a href="#">@c.namesurname</a> @c.subject</h3>
                                                <div class="timeline-body">
                                                    @c.message
                                                </div>
                                                
                                            </div>
                                        </div>
                                        }
                                        
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
      
    </section>
</body>
</html>

